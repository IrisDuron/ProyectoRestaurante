@page "/Menus"
@using Modelos
<AuthorizeView Roles="Administrador">
	<Authorized Context="AuthenticationState">
		<h2>Lista de Platillos</h2>
		<br />
		<div class="form-group row">
			<div class="col-sm-10">
				<a href="/Productos/Nuevo" class="btn btn-primary m-1">Nuevo Producto</a>
			</div>
		</div>

		@if(listaMenus == null)
		{
			<p>No existen productos en la base de datos</p>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th>Código</th>
						<th>Nombre</th>
						<th>Descripcion</th>
						<th>Precio</th>
						<th>Categoria</th>
						<th>Cantidad</th>
					</tr>
				</thead>
				<tbody>
					@foreach(Menu prod in listaMenus)
					{
						<tr>
							<th>@prod.CodigoMenu</th>
							<th>@prod.Nombre</th>
							<th>@prod.Descripcion</th>
							<th>@prod.Precio</th>
							<th>@prod.Categoria</th>
							<th>@prod.Cantidad</th>
							
							
							<th><a class="btn btn-success" href="@($"/Productos/Editar/{prod.CodigoMenu}")">Edidar</a></th>
						</tr>
					}
				</tbody>
			</table>
		}

	</Authorized>
</AuthorizeView>