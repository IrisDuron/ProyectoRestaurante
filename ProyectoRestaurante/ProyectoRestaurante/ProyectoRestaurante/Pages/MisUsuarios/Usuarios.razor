@page "/Usuario"
@using Modelos;

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">

        <h2>Lista de Usuarios</h2>
        <div class="form-group row">
            <div class="col-sm-10">
                <a href="/Usuario/Nuevo" class="btn btn-primary n-1">Nuevo Usuario</a>
            </div>         
        </div>

        @if(lista == null)
        {
            <p>No existen usuarios en el sistema</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Codigo Usuario</th>
                        <th>Nombre</th>
                        <th>Rol</th>
                        <th>Esta Activo</th>                       
                    </tr>
                </thead>
                <tbody>


                    @foreach (Usuario user in lista)
                    {

                        @if(user.Rol == "Administrador")
                        {

                            <tr style="background-color:cornsilk;">
                                <td>@user.CodigoUsuario</td>
                                <td>@user.Nombre</td>
                                <td>@user.Rol</td>
                                @if(user.EstaActivo)
                                {
                                    <td>
                                        <span class="oi oi-circle-check" style="color:green;"></span>
                                    </td>                              
                                }
                                else
                                {

                                    <td>
                                        <span class="oi oi-circle-x" style="color:red;"></span>
                                    </td>                             
                                }
                                <td>
                                    <a class="btn btn-success" href="@($"/Usuario/Editar/{user.CodigoUsuario}")"></a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>@user.CodigoUsuario</td>
                                <td>@user.Nombre</td>
                                <td>@user.Rol</td>
                                @if(user.EstaActivo)
                                {
                                    <td>
                                        <span class="oi oi-circle-check" style="color:green;"></span>
                                    </td>                              
                                }
                                else
                                {

                                    <td>
                                        <span class="oi oi-circle-x" style="color:red;"></span>
                                    </td>                             
                                }
                                <td>
                                    <a class="btn btn-success" href="@($"/Usuario/Editar/{user.CodigoUsuario}")"></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    </Authorized>
</AuthorizeView>





